@using ASPSDAL
@model IEnumerable<ASPSDAL.CourseRecommendation>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                @{
                    if ((Session["Faculty"]) != null)
                    {
                        <li>@Html.ActionLink(((Faculty) Session["Faculty"]).Name, "Index", "FacultyProfile")</li>
                    }
                }
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Activity<span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                    <li>@Html.ActionLink("Edit Basic Information", "Edit", "FacultyProfile")</li>
                    <li>@Html.ActionLink("Change Password", "ChangePassword", "FacultyProfile")</li>
                    <li>@Html.ActionLink("Visit Student Profile", "VisitStudentProfile", "FacultyProfile")</li>
                    <li>@Html.ActionLink("Recommend Student", "Index", "CourseRecommendations")</li>
                </ul>
                <li>@Html.ActionLink("Sign Out", "SignOut", "SignIn")</li>
            </ul>
        </div>
    </div>
</div>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Faculty.FacultyEmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Student.StudentEmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Course.CourseCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CourseRating)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Faculty.FacultyEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Student.StudentEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Course.CourseCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CourseRating)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ContentID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ContentID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ContentID })
        </td>
    </tr>
}

</table>
