@using ASPSDataModel

@{
    ViewBag.Title = "VisitStudent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>VisitStudent</h2>

<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink(((Faculty)Session["Faculty"]).Name, "Index", "FacultyProfile")</li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                @*<li><a href="@Url.Action("Index", "Search")"><span class="glyphicon glyphicon-search"></span>Search</a></li>*@
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Activity<span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        <li>@Html.ActionLink("Recommend Student", "Index", "Results")</li>
                        <li>@Html.ActionLink("Visit Student", "Index", "Results")</li>
                    </ul>
                <li><a href="@Url.Action("Index", "Home")"><span class="glyphicon glyphicon-log-out"></span>SignOut</a></li>
            </ul>
        </div>
    </div>
</div>


<div class="container">
    @{

        StudentRepository studentRepository = new StudentRepository();
        <h3>Students</h3>
        foreach (var student in studentRepository.StudentsList())
        {
            <hr />
            <div>
                <a href="#">@student.Name</a>
                <p>@student.StudentEmail</p>
            </div>
        }

    }
</div>